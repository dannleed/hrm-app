{
  "name": "hrm-app",
  "version": "0.1.0",
  "private": true,
  "prettier": "./prettier-config/",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:next": "next lint",
    "lint:check": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier:check": "prettier --check \"*/**/*.{ts,tsx}\" --loglevel=warn",
    "prettier:fix": "prettier --write \"*/**/*.{ts,tsx}\" --loglevel=warn",
    "pre-commit-check": "npm run lint:check && npm run prettier:check",
    "pre-commit": "npm run prettier:fix && npm run lint:fix"
  },
  "dependencies": {
    "next": "12.3.1",
    "next-auth": "^4.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^9.1.7",
    "@types/node": "^18.8.4",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "eslint": "^8.25.0",
    "eslint-config-next": "12.3.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prisma": "^4.4.0",
    "prisma-erd-generator": "^1.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run hooks:pre-commit"
    }
  }
}